extends layout

block content
    h1 Edit Article
    form(method='POST',action="/articles/edit/"+article[0].id,accept-charset="utf-8")
        #form-grop
            label Title：
            input.form-control(name="title",type="text",value=article[0].title)
        #form-grop
            label Category：
            select.form-control(name="category",type="text",value=article[0].category)
                option(value="新聞") 新聞
                option(value="科技") 科技
                option(value="心得") 心得
        #form-grop
            label Content：
            textarea.form-control(name="content",type="text",rows="8") #{article[0].content}
        #form-grop
            label Image：
            input.form-control(name="images",type="file")
        br
        .form-check.form-check-inline.col-sm-12
            label.radio-inline.col-sm-4 
                input#inlineRadio1.form-check-input(type='radio', name='publish', value=1)
                |  Publish
            label.radio-inline.col-sm-4  
                input#inlineRadio2.form-check-input(type='radio', name='publish', value=0)
                |  Not Publish
        br
        input.btn.btn-primary(type='submit',value="儲存")
